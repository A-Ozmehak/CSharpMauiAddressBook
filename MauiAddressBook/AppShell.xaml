<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAddressBook.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAddressBook"
    
    xmlns:pages="clr-namespace:MauiAddressBook.Pages"
    
    Shell.FlyoutBehavior="Disabled"
    Title="MauiAddressBook">

    <ShellContent
        Title="Add Contact"
        ContentTemplate="{DataTemplate pages:ContactAddPage}"
        Route="ContactAddPage" />

    <ShellContent
        Title="Contact List"
        ContentTemplate="{DataTemplate pages:ContactListPage}"
        Route="ContactListPage" />

</Shell>
